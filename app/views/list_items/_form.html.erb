<%= form_with(model: list_item, id: "#{dom_id(list_item)}_form", class: "list_item_form") do |form| %>
  <% if list_item.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(list_item.errors.count, "error") %> prohibited this list_item from being saved:</h2>

      <ul>
        <% list_item.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :due %>
    <%= form.datetime_field :due %>
  </div>

  <div>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div class="actions">
    <%= link_to "cancel", list_items_path, class: "btn material-icons-outlined" %>
    <%= form.submit value: "done", class: "btn material-icons-outlined" %>
  </div>
<% end %>
